# 乐格至效 - 开发环境配置文件

# =================================
# 基础配置
# =================================

# 应用名称
VITE_APP_NAME=乐格至效

# 应用版本
VITE_APP_VERSION=1.0.0

# 运行环境
NODE_ENV=development
REACT_APP_ENV=development

# =================================
# API配置
# =================================

# 后端API基础URL
VITE_API_URL=http://localhost:3000/api
REACT_APP_API_URL=http://localhost:4000

# API请求超时时间 (毫秒)
VITE_API_TIMEOUT=10000

# =================================
# 服务模式配置 (true=使用Mock, false=使用真实服务)
# =================================

# 认证服务模式
VITE_USE_MOCK_AUTH=false

# 数据库服务模式  
VITE_USE_MOCK_DB=false

# AI服务模式
VITE_USE_MOCK_AI=true

# =================================
# 数据库配置 (ArangoDB)
# =================================

# ArangoDB连接URL
VITE_ARANGO_URL=http://localhost:8529

# 数据库名称
VITE_ARANGO_DB_NAME=legezhixiao_db

# 数据库用户名
VITE_ARANGO_USERNAME=root

# 数据库密码 (开发环境可为空)
VITE_ARANGO_PASSWORD=

# 连接超时时间 (毫秒)
VITE_ARANGO_TIMEOUT=10000

# =================================
# AI服务配置
# =================================

# AI服务提供商 (siliconflow, openai, deepseek)
VITE_AI_PROVIDER=siliconflow

# AI API密钥 (开发环境使用Mock服务)
VITE_AI_API_KEY=

# AI API基础URL
VITE_AI_API_URL=https://api.siliconflow.cn/v1

# 默认AI模型
VITE_AI_MODEL=deepseek-ai/DeepSeek-V3

# AI请求超时时间 (毫秒)
VITE_AI_TIMEOUT=30000

# =================================
# 开发配置
# =================================

# 启用开发工具
VITE_ENABLE_DEV_TOOLS=true

# 启用调试模式
VITE_DEBUG_MODE=true
