# 乐格至效 - 生产环境配置文件

# =================================
# 基础配置
# =================================

# 应用名称
VITE_APP_NAME=乐格至效

# 应用版本
VITE_APP_VERSION=1.0.0

# 运行环境
NODE_ENV=production

# =================================
# API配置
# =================================

# 后端API基础URL (生产环境地址)
VITE_API_URL=https://your-domain.com/api

# API请求超时时间 (毫秒)
VITE_API_TIMEOUT=15000

# =================================
# 服务模式配置 (生产环境全部使用真实服务)
# =================================

# 认证服务模式
VITE_USE_MOCK_AUTH=false

# 数据库服务模式  
VITE_USE_MOCK_DB=false

# AI服务模式
VITE_USE_MOCK_AI=false

# =================================
# 数据库配置 (ArangoDB)
# =================================

# ArangoDB连接URL (生产环境地址)
VITE_ARANGO_URL=https://your-arango-server:8529

# 数据库名称
VITE_ARANGO_DB_NAME=legezhixiao_production

# 数据库用户名
VITE_ARANGO_USERNAME=production_user

# 数据库密码 (生产环境必须设置强密码)
VITE_ARANGO_PASSWORD=your-strong-password

# 连接超时时间 (毫秒)
VITE_ARANGO_TIMEOUT=15000

# =================================
# AI服务配置
# =================================

# AI服务提供商
VITE_AI_PROVIDER=siliconflow

# AI API密钥 (生产环境必须设置真实密钥)
VITE_AI_API_KEY=your-real-api-key

# AI API基础URL
VITE_AI_API_URL=https://api.siliconflow.cn/v1

# 默认AI模型
VITE_AI_MODEL=deepseek-ai/DeepSeek-V3

# AI请求超时时间 (毫秒)
VITE_AI_TIMEOUT=30000

# =================================
# 安全配置
# =================================

# JWT密钥 (生产环境必须使用强密钥)
VITE_JWT_SECRET=your-super-strong-jwt-secret-key-for-production

# Token过期时间 (小时)
VITE_TOKEN_EXPIRES_IN=24

# 刷新Token过期时间 (天)
VITE_REFRESH_TOKEN_EXPIRES_IN=7

# =================================
# 日志配置
# =================================

# 日志级别
VITE_LOG_LEVEL=error

# 启用控制台日志
VITE_ENABLE_CONSOLE_LOG=false

# 启用文件日志
VITE_ENABLE_FILE_LOG=true

# =================================
# 性能配置
# =================================

# 启用缓存
VITE_ENABLE_CACHE=true

# 缓存过期时间 (分钟)
VITE_CACHE_EXPIRE_TIME=60

# 启用服务工作者
VITE_ENABLE_SERVICE_WORKER=true
